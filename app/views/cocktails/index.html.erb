<div class="container">
 <h1 class='mt-2'>Cocktails</h1>

  <div class="card-group">
   <% @cocktails.each do |cocktail| %>
    <div class="card m-4" style="width: 18rem;">
     <%= cl_image_tag cocktail.photo.key, class: "card-img-top", height: 400, width: 400, crop: :fill %>
     <div class="card-body ">
      <h1><%= link_to cocktail.name, cocktail_path(cocktail)  %></h1>
     </div>
    </div>
   <% end %>
 </div>
</div>