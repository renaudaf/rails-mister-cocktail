<div class="container">
 <h1 class='mt-2'><%= @cocktail.name %></h1>

 <div class="cocktail-container">
  <ul class="list-group">
   <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %>
    <%= dose.ingredient.name %>  
    <%= link_to "Remove",
                    dose_path(dose),
                    method: :delete,
                    data: { confirm: "Are you sure?" } %></li>
  <% end %>
 </div>
 <div class="link-container d-flex">
  <%= link_to  "Add a dose", new_cocktail_dose_path(@cocktail), class: 'btn btn-primary m-2' %>
    <%= link_to "Remove drink",
                    cocktail_path(@cocktail),
                    method: :delete,
                    data: { confirm: "Are you sure?" }, 
                    class: 'btn btn-primary m-2' %>
 </div>
</div>